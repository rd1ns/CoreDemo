@using EntitiyLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<h1 style="text-align:center">Yazarın Blogları</h1>
<br />
<div style="overflow-x: auto; border-radius:20px;">
    <table class="table table-light">


        <tr style="text-align:center" class="text-gray">
            <th></th>
            <th>Blog Başlığı</th>
            <th>Oluşturmna Tarihi</th>
            <th>Kategori</th>
            <th>Durum</th>
            <th style="color:#fe7c96">Sil</th>
            <th style="color: #fed713">Güncelle</th>
            

        </tr>
        @foreach (var item in Model)
        {
            <tr style="text-align:center" class="text-capitalize">
                <td>@item.BlogID</td>

                <td>@item.BlogTitle</td>
                <td>@item.BlogCreateDate.ToShortDateString()</td>
                <td>@item.Category.CategoryName</td>
                <td>
                    @if (item.BlogStatus)
                    {
                        <span class="badge badge-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Pasif</span>
                    }
                </td>
                <td>
                    <a href="/Blog/DeleteBlog/@item.BlogID" id="submit" class="btn btn-danger">Sil</a>
                </td>
                <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Güncelle</a></td>

            </tr>
        }
    </table>
</div>
<br />
<div style="overflow-x: auto; border-radius:20px; text-align:center">
    <a href="/Blog/BlogAdd/" class="btn btn-primary">Ekle</a>
</div>


